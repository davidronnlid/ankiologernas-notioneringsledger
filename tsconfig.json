{
  "compilerOptions": {
    "target": "ES2018",
    "module": "CommonJS",
    "outDir": "./netlify/functions",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["path/to/your/typescript/functions/**/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
