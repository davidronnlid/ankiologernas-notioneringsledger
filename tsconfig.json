{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false, // change this to false to enable emitting files
    "esModuleInterop": true,
    "module": "CommonJS", // change this to CommonJS for Node.js environment
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": "./src",
    "outDir": "./.netlify/functions", // specify the output directory for compiled files
    "paths": {
      "@/shared-components/*": ["shared-components/*"],
      "@/components/*": ["components/*"],
      "@/types": ["types/index.ts"],
      "@/customActions/*": ["store/customActions/*"]
    },
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "./netlify/functions/*.ts"
  ],
  "exclude": ["node_modules"]
}
